<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip">


    <LinearLayout
        android:id="@+id/LinearLayoutPopUp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNomePizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dip"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="@dimen/my_default_padding" />

            <TextView
                android:id="@+id/textViewLabelIngredienti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INGREDIENTI"
                android:textSize="18dip"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="@dimen/my_default_padding"
                android:background="@color/colorAccent"/>
            <TextView
                android:id="@+id/textViewIngredienti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:textAlignment="center"
                android:padding="@dimen/my_default_padding"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorAccent">
            <TextView
                android:id="@+id/textViewLabelPrezzo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PREZZO"
                android:textSize="18dip"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="@dimen/my_default_padding"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/textViewLabelQuantita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUANTITA'"
                android:textSize="18dip"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="@dimen/my_default_padding"
                android:textColor="@color/colorBlack" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                android:id="@+id/textViewPrezzo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/my_default_padding"
                android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <EditText
                android:id="@+id/edtxtQuantita"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/my_default_padding"/>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btnAddCarrello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + CARRELLO "
            android:textAlignment="center"
            android:textSize="@dimen/text_size"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/my_default_padding"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:layout_marginTop="40px"/>

    </LinearLayout>



</LinearLayout>